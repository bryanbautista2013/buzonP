                            <td>
                                @Html.DisplayFor(modelItem => item.IdEstado)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NomEstado)
                            </td>
                            <td>
                                @*<a asp-action="Edit" asp-route-id="@item.IdEstado">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.IdEstado">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.IdEstado">Delete</a>|*@
                                <a class="btn btn-success" asp-action="listarEstado" asp-controller="Resolver" asp-route-id="@item.IdEstado">LISTAR ESTADO</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
