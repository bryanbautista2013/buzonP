@model IEnumerable<proyectoBuzon.Models.Estado>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://maxcdn.boostrapcdn.com/boostrap/3.3.1/css/boostrap.min.css">


<center>
    <h2>SEGUIMIENTO</h2>
</center>

<div class="container">
    <p>
            <a asp-action="Create">Create New</a>
        </p>

        <div class="table-responsive">

            <table class="table">

                @*<table class="table table-striped table-bordered table-hover ">*@
                <thead>
                    <tr class="warning">
                        <th>
                            @Html.DisplayNameFor(model => model.IdEstado)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NomEstado)
                        </th>
                        <th>
                            OPCIONES
                        </th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
