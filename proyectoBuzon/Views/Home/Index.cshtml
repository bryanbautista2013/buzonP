@{
    ViewData["Title"] = "Home Page";
}
<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.boostrapcdn.com/boostrap/3.3.4/css/boostrap.min.css">
</head>

<body>
    <center>
        <div class="container">
            <br>
            <div class="col-md-12">
                <div id="carousel-1" class="carousel slide" data-ride="carousel">

                    @*indicadores*@

                    <ol class="carousel-indicators">
                        <li data-target="#carousel-1" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-1" data-slide-to="1"></li>
                        <li data-target="#carousel-1" data-slide-to="2"></li>
                    </ol>
                    @*contenedor de slides*@
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img src="~/images/buzon1.jpg" width="700" height="100" class="img-responsive">
                            <div class="carousel-caption hidden-xs hidden-sm ">
                                @*<h3>Este es nuestro slide #1</h3>*@
                            </div>
                        </div>
                        <div class="item">
                            <img src="~/images/buzon.jpg" class="img-responsive">
                            <div class="carousel-caption hidden-xs hidden-sm">

                            </div>
                        </div>
                        <div class="item">
                            <img src="~/images/sugerencias.jpg" width="500" height="100" class="img-responsive">
                            <div class="carousel-caption hidden-xs hidden-sm">

                            </div>
                        </div>
                    </div>

                    @*controles*@
                    <a href="#carousel-1" class="left carousel-control" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Anterior</span>
                    </a>


                    <a href="#carousel-1" class="right carousel-control" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Anterior</span>
                    </a>

                </div>
            </div>
        </div>



        @*<div>
                <img src="~/images/img.jpg">
            </div>
            <hr>*@
        <table class="table-bordered">

            <tr>

                <td>
                    @Html.ActionLink("CLIENTE", "Index", "Cliente", null, new { @class = "btn btn-success btn-lg" })
                </td>

                <td>
                    @Html.ActionLink("ADMINISTRADOR", "Index", "Admin", null, new { @class = "btn btn-danger btn-lg" })
                </td>

            </tr>


        </table>
    </center>


</body>
</html>



